{
	"variables": {
		"client_id": "{{env `ARM_CLIENT_ID`}}",
		"client_secret": "{{env `ARM_CLIENT_SECRET`}}",
		"subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}"
	},
	"builders": [{
		"type": "azure-arm",
    "client_id": "xxxxxxxxxxxxxxxx", ## your application ID
    "client_secret": "xxxxxxxxx", ## your service principal
    "subscription_id": "xxxxxxxxxxx", ## your subscribtio ID
 
    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "18.04-LTS",
 
    "managed_image_resource_group_name": "xxxxxxx",
    "managed_image_name": "myPackerImage",
 
    "location": "East US",
    "vm_size": "Standard_B1s"
	
	}],
	"provisioners": [{
		"inline": [
			"echo 'Hello, World!' > index.html",
			"nohup busybox httpd -f -p 80 &"
		],
		"inline_shebang": "/bin/sh -x",
		"type": "shell"
	}]
}
